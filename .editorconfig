# editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{jscsrc, jshintrc}]
indent_size = 2

[*.less]
indent_style = tab

[*.scss]
indent_style = tab

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
